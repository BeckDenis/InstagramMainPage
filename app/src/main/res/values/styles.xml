<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    //Text Appearance

    <style name="smallest_text">
        <item name="android:textSize">11sp</item>
    </style>

    <style name="small_text">
        <item name="android:textSize">11.5sp</item>
    </style>

    <style name="medium_text">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="large_text">
        <item name="android:textSize">13.5sp</item>
    </style>


    //Toolbar

    <style name="toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">?attr/actionBarSize</item>
        <item name="android:theme">@style/ThemeOverlay.AppCompat.Light</item>
    </style>

    <style name="toolbar_icon">
        <item name="android:layout_width">56dp</item>
        <item name="android:padding">16dp</item>
        <item name="android:layout_height">56dp</item>
    </style>

    <style name="logo">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:adjustViewBounds">true</item>
    </style>

    // Stories

    <style name="story_image">
        <item name="android:layout_width">65dp</item>
        <item name="android:layout_height">65dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginTop">12dp</item>
    </style>

    <style name="your_story_image" parent="story_image">
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:padding">4dp</item>
    </style>

    <style name="story_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:maxLines">1</item>
        <item name="android:paddingStart">2dp</item>
        <item name="android:paddingEnd">2dp</item>
        <item name="android:textAppearance">@style/medium_text</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>

    // Posts

    <style name="post_user_image">
        <item name="android:layout_width">@dimen/post_user_image_size</item>
        <item name="android:layout_height">@dimen/post_user_image_size</item>
        <item name="android:layout_marginStart">10dp</item>
    </style>

    <style name="post_user_name">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textAppearance">@style/large_text</item>
    </style>

    <style name="post_user_location">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textAppearance">@style/small_text</item>
    </style>

    <style name="post_icon">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="post_comment">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxLines">1</item>
        <item name="android:layout_marginTop">1dp</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:textAppearance">@style/large_text</item>
    </style>

</resources>